{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      2,
      {
        singleQuote: true,
        trailingComma: "es5",
        useTabs: true,
        printWidth: 80,
        semi: true,
        parser: "flow",
        jsxBracketSameLine: true
      },
    ],
    'no-unused-vars': 2,
    'no-console': 2,
    'no-restricted-syntax': 2
  },
}
