mixin intro
	- const string1 = 'Hello';
	- const arr1 = Array.from(string1);

	.string.string1
		each val, index in arr1
			- if (val == " ") {val = String.fromCharCode(160);}
				div(class='letter l' + (arr1.length - index))
					span= val
		div(class='letter dot dot-outer')
				span.dot
	.string.string2 I'm Irina Illustrova,
	.string.string3 Frontend Developer from Athens, Greece&nbsp;🏛				
	ul.intro-menu.d-flex.align-items-center.justify-content-around
		li
			a(href="#portfolio") Works
		li
			a(href="#about") About
		li
			a(href="#contacts") Contact
		
